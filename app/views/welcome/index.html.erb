
<div class="grid-x grid-padding-x">
  <div class="cell small-12 text-left">
    <%= image_tag("NicholasAirLogo.png", :alt => "rss feed") %>
  </div>
  <div class="cell small-12 text-left">
    <h2>Nicholas Air Knowledge Application</h2>
  </div>
</div>



<div class="top-bar">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <% if user_signed_in? %>
        <li><%= link_to "Flights", flights_path, :class => "", remote: true %></li>
        <li><%= link_to "Debriefs", debriefs_path, :class => "", remote: true %></li>
        <% if current_user.has_role? :admin %>
          <li><%= link_to "Aircraft", aircrafts_path, :class => "", remote: true %></li>
          <li><%= link_to "Users", users_path, :class => "", remote: true %></li>
          <li><%= link_to "Dropdowns", "#", :class => "" %>
            <ul class="dropdown menu">
              <li><%= link_to "Arrival Types", arrivaltypes_path, :class => "" %></li>
              <li><%= link_to "Departure Types", departuretypes_path, :class => "" %></li>
              <li><%= link_to "Airborne Flight Checkins", airborneflightcheckins_path, :class => "" %></li>
              <li><%= link_to "Airborne Flight Delays", airborneflightdelays_path, :class => "" %></li>
              <li><%= link_to "Flight Turbulences", flight_turbulences_path, :class => "" %></li>
            </ul>
          </li>
        <% end %>
      <% else %>
        <li><%= link_to "Login", new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="top-bar-right">
    <% if user_signed_in? %>
    <ul class="dropdown menu" data-dropdown-menu>
      <li><%= current_user.email %></li>
      <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
    </ul>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>

  <div id="applicationContent">

  </div>

<% end %>

<div id="myModal" class="reveal large" data-reveal>

</div>

<div id="mySmallModal" class="reveal medium" data-reveal>
    
</div>

<div class="show-for-small-only">
  <div class="mobile-app-icon-bar footer">
    <div class="grid-x">
      <div class="cell small-4">
        <button><i class="fa fa-cog" aria-hidden="true"></i></button>
      </div>
      <div class="cell small-4">
        <button><i class="fa fa-upload" aria-hidden="true"></i></button>
      </div>
      <div class="cell small-4">
        <button><i class="fa fa-list-ul" aria-hidden="true"></i></button>
      </div>    
  </div>
</div>



