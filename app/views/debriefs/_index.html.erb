<p id="notice"><%= notice %></p>

<h3>Feedback/Debriefs</h3>
    
    <% @debriefs.each do |debrief| %>
    <div class="grid-x grid-padding-x">
      <div class="cell small-12">
        <h4>
          <% flight = Flight.find(debrief.flight_id) %>
          <% flightNumber = flight.flightNumber %>
          <% flightLink = "Flight #" + flightNumber %>
          <%= link_to flightLink, debrief, :remote => true %> from <%= flight.departureAirfield %> to <%= flight.arrivalAirfield %>
        </h4>
      </div>
    </div>
    
    <% end %>

