
<%= simple_form_for(@flight) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :flightNumber %>
    <%= f.input :dateOfFlight %>
    <%= f.input :departureAirfield, collection: @airfields, label_method: :icao %>
    <%= f.input :arrivalAirfield, collection: @airfields, label_method: :icao %>
    <%= f.input :client %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
