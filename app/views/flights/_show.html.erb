<p id="notice"><%= notice %></p>

<button class="close-button" data-close aria-label="Close modal" type="button">
  <span aria-hidden="true">&times;</span>
</button>

<div class="grid-x grid-padding-x">
  <div class="cell small-12 text-center">
    <h3>
      Flight #<%= @flight.flightNumber %> - <%= @flight.dateOfFlight %>
    </h3>
  </div>
</div>

<h5>
  <%= @flight.departureAirfield %> - <%= @flight.arrivalAirfield %>

  <% if @flight.revenue_test == false %>
    - Repo Flight
  <% end %>
</h5>

<% if @flight.revenue_test == true %>
  <h6>
    Client: 
    <%= @flight.client %>
  </h6>
<% end %>

<div class="text-right">
  <% if @flight.debrief %>
  	<% debrief = @flight.debrief %>
  	<%= link_to "Debrief", debrief, :remote => true, class: "button" %> 
  <% else %>
  	<%= link_to 'New Debrief', new_debrief_path(:flight_id => @flight.id), :remote => true, class: "button" %>
  <% end %>
</div>

