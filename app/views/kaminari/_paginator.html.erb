<%= paginator.render do %>
  <div class="show-for-medium">
    <div class="pagination-centered">
      <ul class="pagination">
        <%= first_page_tag %>
        <%= prev_page_tag %>
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <%= page_tag page %>
          <% elsif !page.was_truncated? %>
            <%= gap_tag %>
          <% end %>
        <% end %>
        <%= next_page_tag %>
        <%= last_page_tag %>
      </ul>
    </div>
  </div>

  <div class="show-for-small-only">
    <div class="pagination-centered">
      <ul class="pagination">
        <%= prev_page_tag %>

        <%= next_page_tag %>
      </ul>
    </div>
  </div>

<% end %>



