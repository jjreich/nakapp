<% if url.include? "debriefs" %>
	<% url.slice! "/debriefs" %>
	<% if url[0] == "/" %>
		<% url = url[1..-1] %>
		<% while url.start_with?(*('0'..'9')) do %>
			<% url = url[1..-1] %>
		<% end %>
	<% end %>
	<% url = "/debriefs" + url %>
<% end %>

<% if current_page.first? %>
	<li class="disabled show-for-medium">
<% else %>
	<li class ="show-for-medium">
<% end %>
	  <%= link_to_unless current_page.first?, raw(t 'views.pagination.previous'), url, :rel => 'prev', :remote => remote %>
	</li>

<li class="show-for-small-only">
  	  <% if current_page.first? %>
  	  		<i class="fa fa-step-backward fa-2x disabled" aria-hidden="true"></i>
  	  <% else %>
  	  	<%= link_to url, :rel => 'prev', :remote => remote do %>
  			<i class="fa fa-step-backward fa-2x" aria-hidden="true"></i>
  		<% end %>
  	  <% end %>
</li>