<p id="notice"><%= notice %></p>

<div class="grid-x grid-padding-x">
  <div class="cell small-6 text-left">
    <h1>Users</h1>
  </div>

  <div class="cell small-6 text-right show-for-medium">
    <%= link_to 'Add New User', new_user_path, remote: true, class: "hollow button" %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Pilot</th>
      <th>Ops</th>
      <th>Maint</th>
      <th>Team Blue</th>
      <th>Flight Support</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fullName %></td>
        <td><%= user.email %></td>
        <td><%= user.pilot_role %></td>
        <td><%= user.ops_role %></td>
        <td><%= user.maint_role %></td>
        <td><%= user.team_blue_role %></td>
        <td><%= user.flight_support_role %></td>
        <td><%= user.admin_role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user), remote: true %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>